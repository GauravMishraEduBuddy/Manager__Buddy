@using EduBuddyApp.Models

<RadzenCard class="rz-my-3 rz-mx-auto syllabus-card" Style="max-width:420px; background-color:#004d40;">
    <!-- Header section -->
    <RadzenStack Orientation="Radzen.Orientation.Horizontal" JustifyContent="JustifyContent.Start" Gap="0.5rem" class="rz-p-2">
        <RadzenIcon Icon="menu_book" Style="font-size:36px;color:#80cbc4;" />
        <RadzenStack Gap="0">
            <RadzenText TextStyle="TextStyle.Body1" Style="color:white;margin:0;"><b>@Item?.SubjectName</b></RadzenText>
            <RadzenText TextStyle="TextStyle.Caption" Style="color:white;margin:0;">@Item?.BookName</RadzenText>
        </RadzenStack>
    </RadzenStack>
    
    <!-- Chapter title with more compact spacing -->
    <div class="compact-info-row">
        <RadzenIcon Icon="format_list_numbered" Style="color:#80cbc4;" />
        <RadzenText TextStyle="TextStyle.Body2" Style="color:white;">Chapter @Item?.ChapterNumber - @Item?.ChapterTitle</RadzenText>
    </div>
    
    <!-- Two column info rows -->
    <div class="info-section">
        <div class="info-row">
            <div class="info-item">
                <RadzenIcon Icon="checklist" Style="color:#80cbc4;" />
                <span>Exercises: @Item?.ChapterExcercises</span>
            </div>
            <div class="info-item">
                <RadzenIcon Icon="schedule" Style="color:#80cbc4;" />
                <span>Allotted: @Item?.ChapterAllottedLectures</span>
            </div>
        </div>
        
        <div class="info-row">
            <div class="info-item">
                <RadzenIcon Icon="access_time" Style="color:#80cbc4;" />
                <span>Taken: @Item?.PeriodsTaken</span>
            </div>
            <div class="info-item">
                <RadzenIcon Icon="grade" Style="color:#80cbc4;" />
                <span>Difficulty: @Item?.DifficultyLevel</span>
            </div>
        </div>
        
        <div class="compact-info-row">
            <RadzenIcon Icon="event_note" Style="color:#80cbc4;" />
            <span>Exams: @Item?.ExamNames</span>
        </div>
        
        <div class="compact-info-row">
            <RadzenIcon Icon="list_alt" Style="color:#80cbc4;" />
            <span>Topics: @Item?.Topics</span>
        </div>
        
        <div class="compact-info-row">
            <RadzenIcon Icon="assignment" Style="color:#80cbc4;" />
            <span>Activity: @Item?.ChapterActivity</span>
        </div>
    </div>
</RadzenCard>

@code {
    [Parameter]
    public SyllabusItem? Item { get; set; }
}

<style>
    .syllabus-card {
        box-shadow: 0 4px 8px rgba(0,0,0,0.3);
        border-radius: 8px;
        padding: 8px !important;
    }
    
    .info-section {
        padding: 5px 8px;
    }
    
    .info-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 5px;
    }
    
    .info-item {
        display: flex;
        align-items: center;
        flex: 1;
    }
    
    .compact-info-row {
        display: flex;
        align-items: center;
        margin-bottom: 5px;
        padding: 0 8px;
    }
    
    .info-item span, .compact-info-row span {
        color: white;
        font-size: 0.875rem;
        margin-left: 5px;
    }
    
    /* Make icons slightly smaller and aligned */
    .rz-icon {
        font-size: 18px !important;
        min-width: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>