@using EduBuddyApp.Models
@using Radzen

@if (Exam != null)
{
<RadzenCard Style="padding: 12px; margin: 6px; box-shadow: 0 2px 8px rgba(0,0,0,0.12); border-radius: 10px; background: linear-gradient(135deg, #f6f9fc, #e9eff5);">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <div style="display: flex; align-items: center;">
            <RadzenIcon Icon="assignment" Style="color: #8e44ad; font-size: 1.5rem; margin-right: 8px;" />
            <span style="font-size: 1.2rem; font-weight: 600; color: #2c3e50;">
                @Exam.ExamName
            </span>
        </div>
        <div style="font-size: 0.8rem; color: #7f8c8d;">
            (ID: @Exam.ExamId)
        </div>
    </div>
    <div style="margin-top: 6px; font-size: 0.95rem; color: #555;">
        <RadzenIcon Icon="school" Style="color: #2980b9; margin-right: 4px;" />
        <strong>Session:</strong> @Exam.AcademicSessionName
    </div>
    <div style="display: flex; flex-wrap: wrap; gap: 12px; margin-top: 10px; font-size: 0.9rem; color: #34495e;">
        <div style="display: flex; align-items: center;">
            <RadzenIcon Icon="check_circle" Style="color: #27ae60; margin-right: 4px;" />
            <span>Status: @(Exam.IsExamOpen ? "Open" : "Closed")</span>
        </div>
        <div style="display: flex; align-items: center;">
            <RadzenIcon Icon="description" Style="color: #e67e22; margin-right: 4px;" />
            <span>Type: @Exam.ExamTypeName</span>
        </div>
        <div style="display: flex; align-items: center;">
            <RadzenIcon Icon="percent" Style="color: #c0392b; margin-right: 4px;" />
            <span>Weightage: @(Exam.MarksWeightage.HasValue ? Exam.MarksWeightage.Value.ToString() : "-")</span>
        </div>
    </div>
    @if (!string.IsNullOrWhiteSpace(Exam.Comments))
    {
        <div style="margin-top: 8px; font-size: 0.9rem; color: #7f8c8d;">
            <RadzenIcon Icon="info" Style="color: #16a085; margin-right: 4px;" />
            <span>@Exam.Comments</span>
        </div>
    }
</RadzenCard>
}
else
{
    <div class="text-muted">Exam not found.</div>
}

@code {
    [Parameter]
    public ExamsViewModel Exam  { get; set; } = default!;

   
}