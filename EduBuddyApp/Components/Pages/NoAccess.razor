@page "/no-access"
@layout Layout.NoNavLayout
@inject NavigationManager NavigationManager

<div class="no-access-container">
    <div class="no-access-card">
        <div class="icon-container">
            <div class="access-denied-icon">
                <svg width="64" height="64" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="12" cy="12" r="10" stroke="white" stroke-width="2"/>
                    <path d="m15 9-6 6" stroke="white" stroke-width="2" stroke-linecap="round"/>
                    <path d="m9 9 6 6" stroke="white" stroke-width="2" stroke-linecap="round"/>
                </svg>
            </div>
        </div>
        
        <div class="content-section">
            <h1 class="title">Access Restricted</h1>
            <h2 class="subtitle">ManagerBuddy Not Enabled</h2>
            
            <div class="message-container">
                <p class="primary-message">
                    Your school's subscription does not currently include access to ManagerBuddy.
                </p>
                <p class="secondary-message">
                    To enable ManagerBuddy for your institution, please contact your EduBuddy service provider or administrator.
                </p>
            </div>
            
            <div class="contact-info">
                <div class="contact-item">
                    <span class="contact-icon">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <circle cx="9" cy="7" r="4" stroke="currentColor" stroke-width="2"/>
                            <path d="m22 21-3-3m0 0a5.5 5.5 0 1 0-7.78 0L14 18l3 3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </span>
                    <span>Contact your School Administrator</span>
                </div>
                <div class="contact-item">
                    <span class="contact-icon">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </span>
                    <span>Reach out to your EduBuddy Provider</span>
                </div>
            </div>
            
            <div class="action-buttons">
                <button class="btn btn-primary" @onclick="GoToWelcome">
                    <span class="btn-icon">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <polyline points="9,22 9,12 15,12 15,22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </span>
                    Back to Home
                </button>
                <button class="btn btn-secondary" @onclick="GoToLogin">
                    <span class="btn-icon">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <polyline points="10,17 15,12 10,7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <line x1="15" y1="12" x2="3" y2="12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                    </span>
                    Try Different Account
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private void GoToWelcome()
    {
        NavigationManager.NavigateTo("/");
    }
    
    private void GoToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }
}

