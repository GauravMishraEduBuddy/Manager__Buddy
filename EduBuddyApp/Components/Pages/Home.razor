@page "/home"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@using EduBuddyApp.Services
@using EduBuddyApp.Models
@inject IEmployeeService EmployeeService
@inject UserState UserState

<div class="welcome-manager-container">
    <div class="welcome-card">
        <div class="welcome-icon">
            🏢
        </div>
        <h1 class="welcome-title">Welcome to Manager Buddy!</h1>
        
        @if (UserState.EmployeeDetails != null)
        {
            <div class="user-info">
                <p class="user-name">Hello, @UserState.EmployeeDetails.EmployeeName!</p>
                <p class="user-role">@UserState.EmployeeDetails.DesignationName</p>
            </div>
        }
        
        <div class="welcome-message">
            <p>Your comprehensive management platform is ready to help you streamline operations and manage your team effectively.</p>
        </div>
        
        <div class="current-time">
            <span class="date">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</span>
            <span class="time">@DateTime.Now.ToString("hh:mm tt")</span>
        </div>
    </div>
</div>

<style>
    .welcome-manager-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .welcome-card {
        background: white;
        border-radius: 20px;
        padding: 3rem 2rem;
        text-align: center;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
        animation: fadeInUp 0.8s ease-out;
    }

    .welcome-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .welcome-title {
        color: #2c3e50;
        font-size: 2.2rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .user-info {
        margin-bottom: 2rem;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 10px;
    }

    .user-name {
        font-size: 1.3rem;
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
    }

    .user-role {
        color: #6c757d;
        font-size: 1rem;
        margin: 0;
    }

    .welcome-message {
        color: #6c757d;
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 2rem;
    }

    .current-time {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding: 1rem;
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        border-radius: 10px;
    }

    .date {
        font-size: 1rem;
        font-weight: 500;
    }

    .time {
        font-size: 1.2rem;
        font-weight: bold;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .welcome-card {
            padding: 2rem 1.5rem;
        }
        
        .welcome-title {
            font-size: 1.8rem;
        }
    }
</style>

@code {
    protected override async Task OnInitializedAsync()
    {
        // Any initialization logic if needed
        await base.OnInitializedAsync();
    }
}
