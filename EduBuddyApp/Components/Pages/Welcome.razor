<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .manager-dashboard {
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        overflow-x: hidden;
    }

    .header-section {
        text-align: center;
        padding: 2rem 1rem 1rem;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
    }

    .logo-container {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
    }

    .logo-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(45deg, #ff6b6b, #feca57);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        font-size: 1.8rem;
        box-shadow: 0 8px 20px rgba(0,0,0,0.3);
    }

    .brand-text {
        text-align: left;
    }

    .brand-title {
        font-size: 1.6rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
    }

    .brand-subtitle {
        font-size: 0.9rem;
        opacity: 0.9;
        margin: 0;
        font-weight: 300;
    }

    .tagline {
        font-size: 1.1rem;
        margin: 1rem 0;
        opacity: 0.95;
        font-style: italic;
    }

    .top-cta-section {
        text-align: center;
        padding: 1rem;
        margin-bottom: 1rem;
    }

    .services-grid {
        padding: 2rem 1rem;
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
        max-width: 400px;
        margin: 0 auto;
    }

    .service-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(15px);
        border-radius: 20px;
        padding: 1.5rem;
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
        cursor: pointer;
        box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    }

    .service-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.2);
        background: rgba(255, 255, 255, 0.25);
    }

    .service-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        display: block;
    }

    .service-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #fff;
    }

    .service-description {
        font-size: 0.85rem;
        opacity: 0.9;
        line-height: 1.4;
        margin-bottom: 1rem;
    }

    .service-features {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        justify-content: center;
    }

    .feature-tag {
        background: rgba(255, 255, 255, 0.2);
        padding: 0.3rem 0.8rem;
        border-radius: 15px;
        font-size: 0.7rem;
        font-weight: 500;
    }

    .cta-section {
        padding: 2rem 1rem 3rem;
        text-align: center;
    }

    .login-btn {
        background: linear-gradient(45deg, #ff6b6b, #feca57);
        border: none;
        color: white;
        padding: 1rem 3rem;
        border-radius: 50px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .login-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.4);
    }

    .top-login-btn {
        background: linear-gradient(45deg, #ff6b6b, #feca57);
        border: none;
        color: white;
        padding: 0.8rem 2.5rem;
        border-radius: 50px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        box-shadow: 0 8px 25px rgba(0,0,0,0.3);
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-top: 0.5rem;
    }

    .top-login-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 35px rgba(0,0,0,0.4);
    }

    .powered-by {
        margin-top: 2rem;
        font-size: 0.8rem;
        opacity: 0.8;
    }

    .stats-row {
        display: flex;
        justify-content: space-around;
        margin: 1.5rem 0;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
    }

    .stat-item {
        text-align: center;
        flex: 1;
    }

    .stat-number {
        font-size: 1.5rem;
        font-weight: 700;
        display: block;
        color: #feca57;
    }

    .stat-label {
        font-size: 0.7rem;
        opacity: 0.9;
        margin-top: 0.2rem;
    }

    /* Animation Classes */
    .fade-in {
        animation: fadeInUp 0.8s ease-out forwards;
        opacity: 0;
        transform: translateY(30px);
    }

    .fade-in-delay-1 { animation-delay: 0.2s; }
    .fade-in-delay-2 { animation-delay: 0.4s; }
    .fade-in-delay-3 { animation-delay: 0.6s; }

    @@keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive Design */
    @@media (min-width: 480px) {
        .services-grid {
            max-width: 500px;
        }
        
        .service-card {
            padding: 2rem;
        }
    }
</style>

