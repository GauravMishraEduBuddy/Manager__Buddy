@code {
    private async Task OpenLoginPopup()
    {
        await DialogService.OpenAsync<LoginForm>("Manager Login", new Dictionary<string, object>
        {
            { "OnLoginComplete", EventCallback.Factory.Create<bool>(this, HandleLoginComplete) }
        }, new DialogOptions() 
        { 
            Width = "90%", 
            Height = "auto",
            Resizable = true,
            Draggable = false,
            CloseDialogOnOverlayClick = true
        });
    }

    private void HandleLoginComplete(bool success)
    {
        if (success)
        {
            NavigationManager.NavigateTo("/home");
            StateHasChanged();
        }
    }
}
